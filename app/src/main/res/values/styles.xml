<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorDone">@color/colorDone</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListItem.TextView" parent="android:Widget.TextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:textColor">@color/colorNormal</item>
    </style>

    <style name="ListItem.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">right|center</item>
    </style>

    <style name="doneText">
        <item name="android:textColor">@color/colorDone</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">@color/colorNormal</item>
    </style>

    <style name="doneTextItalic" parent="doneText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="normalTextItelic" parent="normalText">
        <item name="android:textStyle">italic</item>
    </style>


    <style name="CreateTask.Label" parent="android:Widget.TextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CreateTask.Edit" parent="android:Widget.EditText">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
